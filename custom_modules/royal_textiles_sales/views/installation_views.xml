<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_royal_installation_form" model="ir.ui.view">
        <field name="name">royal.installation.form</field>
        <field name="model">royal.installation</field>
        <field name="arch" type="xml">
            <form string="Installation">
                <header>
                    <button name="action_start_installation" type="object" string="Start Installation" class="btn-primary" invisible="status != 'scheduled'"/>
                    <button name="action_complete_installation" type="object" string="Complete Installation" class="btn-success" invisible="status != 'in_progress'"/>
                    <button name="action_cancel_installation" type="object" string="Cancel Installation" class="btn-danger" invisible="status in ['completed', 'cancelled']"/>
                    <button name="action_reschedule_installation" type="object" string="Reschedule" class="btn-warning" invisible="status not in ['scheduled', 'in_progress']"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,scheduled,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Installation Name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="sale_order_id" options="{'no_create': True}"/>
                            <field name="installer_id" options="{'no_create': True}"/>
                        </group>
                        <group name="scheduling" string="Scheduling">
                            <field name="scheduled_date"/>
                            <field name="estimated_hours"/>
                            <field name="is_overdue" invisible="1"/>
                            <field name="estimated_weight"/>
                        </group>
                    </group>
                    <group>
                        <group name="actual_times" string="Actual Times" invisible="status in ['draft', 'scheduled']">
                            <field name="actual_start_date" readonly="1"/>
                            <field name="completion_date" readonly="1"/>
                            <field name="actual_hours" readonly="1"/>
                            <field name="duration_actual" readonly="1"/>
                            <field name="efficiency_rating" readonly="1"/>
                        </group>
                        <group name="address_info" string="Location">
                            <field name="installation_address" widget="text"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Materials" name="materials">
                            <field name="materials_notes" widget="text" placeholder="Materials list will be populated when calculated from sales order..."/>
                        </page>
                        <page string="Instructions" name="instructions">
                            <field name="special_instructions" widget="text" placeholder="Special instructions for installation team..."/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="description" widget="text" placeholder="Additional notes and comments..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_royal_installation_tree" model="ir.ui.view">
        <field name="name">royal.installation.tree</field>
        <field name="model">royal.installation</field>
        <field name="arch" type="xml">
            <list string="Installations" decoration-success="status == 'completed'" decoration-info="status == 'scheduled'" decoration-warning="status == 'in_progress'" decoration-danger="is_overdue == True" decoration-muted="status == 'cancelled'">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="sale_order_id"/>
                <field name="scheduled_date"/>
                <field name="installer_id"/>
                <field name="status" widget="badge" decoration-success="status == 'completed'" decoration-info="status == 'scheduled'" decoration-warning="status == 'in_progress'" decoration-muted="status == 'cancelled'"/>
                <field name="estimated_hours"/>
                <field name="actual_hours" optional="hide"/>
                <field name="efficiency_rating" optional="hide"/>
                <field name="is_overdue" invisible="1"/>
            </list>
        </field>
    </record>
    <record id="view_royal_installation_search" model="ir.ui.view">
        <field name="name">royal.installation.search</field>
        <field name="model">royal.installation</field>
        <field name="arch" type="xml">
            <search string="Search Installations">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="sale_order_id"/>
                <field name="installer_id"/>
                <field name="scheduled_date"/>
                <filter name="my_installations" string="My Installations" domain="[('installer_id', '=', uid)]"/>
                <filter name="scheduled_today" string="Scheduled Today" domain="[('scheduled_date', '=', time.strftime('%Y-%m-%d'))]"/>
                <filter name="scheduled_this_week" string="This Week" domain="[]" context="{'search_default_filter_date': 1}"/>
                <filter name="overdue" string="Overdue" domain="[('is_overdue', '=', True)]"/>
                <separator/>
                <filter name="status_scheduled" string="Scheduled" domain="[('status', '=', 'scheduled')]"/>
                <filter name="status_in_progress" string="In Progress" domain="[('status', '=', 'in_progress')]"/>
                <filter name="status_completed" string="Completed" domain="[('status', '=', 'completed')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                    <filter name="group_installer" string="Installer" context="{'group_by': 'installer_id'}"/>
                    <filter name="group_customer" string="Customer" context="{'group_by': 'customer_id'}"/>
                    <filter name="group_date" string="Scheduled Date" context="{'group_by': 'scheduled_date:day'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="view_royal_installation_calendar" model="ir.ui.view">
        <field name="name">royal.installation.calendar</field>
        <field name="model">royal.installation</field>
        <field name="arch" type="xml">
            <calendar string="Installation Calendar" date_start="scheduled_date" date_stop="scheduled_date" color="installer_id" event_open_popup="true">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="installer_id"/>
                <field name="status"/>
                <field name="estimated_hours"/>
            </calendar>
        </field>
    </record>
    <record id="view_royal_installation_kanban" model="ir.ui.view">
        <field name="name">royal.installation.kanban</field>
        <field name="model">royal.installation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="installer_id"/>
                <field name="scheduled_date"/>
                <field name="status"/>
                <field name="estimated_hours"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="customer_id"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <div class="o_dropdown_kanban dropdown">
                                            <a class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" role="button" aria-label="Dropdown" aria-haspopup="true" aria-expanded="false">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a t-if="record.status.raw_value == 'scheduled'" name="action_start_installation" type="object" class="dropdown-item">Start Installation</a>
                                                <a t-if="record.status.raw_value == 'in_progress'" name="action_complete_installation" type="object" class="dropdown-item">Complete</a>
                                                <a t-if="record.status.raw_value != 'completed'" name="action_cancel_installation" type="object" class="dropdown-item">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="scheduled_date" widget="date"/>
                                            <br/>
                                            <span t-if="record.estimated_hours.raw_value">
                                                <i class="fa fa-clock-o"/>
                                                <field name="estimated_hours"/>
                                                 hours
                                            </span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <img t-att-src="kanban_image('res.users', 'image_128', record.installer_id.raw_value)" t-att-title="record.installer_id.value" class="oe_kanban_avatar"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div t-if="record.is_overdue.raw_value" class="o_kanban_record_bottom alert alert-danger" style="margin-bottom: 0;">
                                <i class="fa fa-exclamation-triangle"/>
                                 Overdue
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
